# {{BOX_NAME}} - Build System

# Source files
SRCS = $(wildcard src/*.c)
OBJS = $(SRCS:src/%.c=build/%.o)

# Build target
TARGET = dist/app

# Compiler settings
CC = gcc
CFLAGS = -Wall -Wextra -I include
LDFLAGS =

# Build rules
all: $(TARGET)

$(TARGET): $(OBJS)
	@mkdir -p dist
	$(CC) $(OBJS) -o $(TARGET) $(LDFLAGS)

build/%.o: src/%.c
	@mkdir -p build
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -rf build dist

.PHONY: all clean
